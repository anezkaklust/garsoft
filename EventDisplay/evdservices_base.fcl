standard_evd:
{
 AutoAdvanceInterval: 1000
}

evd_message:
{
 debugModules: [ "*" ]
 destinations:
 {
  Drawers:
  {
   type: "cerr"
   threshold: "INFO"
   categories:
   {
    SimulationDrawer:
    {
     limit:       5
     timespan:    100
    }
    RecoBaseDrawer:
    {
     limit:       5
     timespan:    100
    }
    RawDataDrawer:
    {
     limit:       5
     timespan:    100
    }
   }
  }
 }
}

